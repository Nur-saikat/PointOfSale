@model PointOfSale.Models.VMSale
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PrintSale</title>
    <style>
        .contenedor {
           width: 300px !important;
           height:742px !important;
          /* margin:auto; */
        }
        body{
           font-family:Arial, Helvetica, sans-serif
        }
        p.title{
          /*  font-weight:bold; */
        }
         p.title2{
           /* font-weight:bold; */
           color: #03A99F;
           font-size:15px;
        }
        p.text{
           font-size:10px;
           /* font-weight:100; */
           color:#858585;
        }
        p{
           margin:0px
        }
        .tbth{
           text-align:left;
        }

        table.tbproductos{
            border-collapse: separate;
            border-spacing: 4px;
        }

        table.tbproductos thead tr th {
           background-color: #03A99F;
           padding:10px;
           font-size:15px;
           color:white;
        }
        table.tbproductos tbody tr td{
           padding:10px;
        }
        .item{
           font-size:10px;
           /* font-weight:100; */
           color:#757575;
        }
        .item-2{
        font-size:10px;
           /* font-weight:bold; */
           color:#757575;
        }

        .item-3{
           font-size:10px;
           /* font-weight:bold; */
           background-color:#03A99F;
           color:white;
        }

         .td-item {
           border-bottom:2px solid #E8E8E8 !important;
         }
    </style>
</head>
<body >

    <div class="contenedor">

        <table style="width:100%">
            <tr>
                <td>
                    <img src="~/img/Untitled design.png" style="width: 80px;height:80px"/>
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr><td><p class="title2">SALE NUMBER</p></td></tr>
                        <tr><td>@Model.SaleNumber</td></tr>
                    </table>
                </td>
            </tr>
        </table>
        <br />
         <table style="width:100%">
            <tr>
                <td>
                    <table >
                        <tr>
                            <td>
                                <p class="title">Saikat Store</p>
                            </td>
                        </tr>
                        <tr>
                            <td><p class="text">Address: Street:  Dhaka</p></td>
                        </tr>
                        <tr>
                            <td>
                                <p class="text">Email: abdurnursaikat04@gmail.com</p>
                            </td>
                        </tr>
                    </table>
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr>
                            <td><p class="title">CLIENT</p></td>
                        </tr>
                        <tr>
                            <td><p class="text">@Model.ClientName</p></td>
                        </tr>
                        <tr>
                            <td><p class="text">@Model.CustomerDocument</p></td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        <br />
        <br />

        <table class="tbproductos" style="width:100%">
            <thead>
                <tr>
                    <th class="tbth">Product</th>
                    <th class="tbth" style="width:80px">Quantity</th>
                    <th class="tbth" style="width:80px">Price</th>
                    <th class="tbth" style="width:80px">Total</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.DetailSales)
                    {
                        <tr>
                            <td class="td-item"><p class="item">@item.BrandProduct</p></td>
                            <td class="td-item"><p class="item">@item.Quantity</p></td>
                            <td class="td-item"><p class="item">TK @item.Price</p></td>
                            <td style="background-color:#EDF6F9"><p class="item">TK @item.Total</p></td>
                        </tr>

                    }
                }
                <tr>
                    <td colspan="2" rowspan="3">
                    </td>
                    <td  class="td-item">
                        <p class="item-2">Sub Total</p>
                    </td>
                     <td class="item-3">
                         <p>TK @Model.Subtotal</p>
                    </td>
                </tr>
                <tr>
                    <td class="td-item">
                        <p class="item-2">Discount Amount</p>
                    </td>
                     <td class="item-3">
                         <p>TK @Model.TotalTaxes</p>
                    </td>
                </tr>
                 <tr>
                    <td class="item-3">
                        <p >Total</p>
                    </td>
                     <td class="item-3">
                         <p>TK @Model.Total</p>
                    </td>
                </tr>
            </tbody>
        </table>
       
    </div>

</body>
</html>


